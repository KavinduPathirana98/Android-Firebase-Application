<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:background="@drawable/back"
        android:gravity="center_horizontal"
        android:text="Choose Your Category"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:textStyle="bold"

        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:padding="50px"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:id="@+id/card_IT"

            >

            <ImageView
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/device"
                app:tint="@color/light_blue_70" />

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:gravity="bottom|center"
                    android:text="Information Technology"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_70"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"


            >

            <ImageView
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/bullhorn"
                app:tint="@color/light_blue_70" />

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:gravity="bottom|center"
                    android:text="Marketing"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_70"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"

            >

            <ImageView
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/cogwheel"
                app:tint="@color/light_blue_70" />

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:gravity="bottom|center"
                    android:text="Engineering"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_70"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"

            >

            <ImageView
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/bars"
                app:tint="@color/light_blue_70" />

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:gravity="bottom|center"
                    android:text="Finance"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_70"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"

            >

            <ImageView
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/paint"
                app:tint="@color/light_blue_70" />

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:gravity="bottom|center"
                    android:text="Design"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_70"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"

            >

            <ImageView
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/logistics"
                app:tint="@color/light_blue_70" />

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:gravity="bottom|center"
                    android:text="Logistic"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_70"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>