<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12sp"
        android:paddingRight="12sp"
        android:paddingBottom="12sp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifimageview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/animated" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aclonica"
            android:text="@string/retailer_heading"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:text="@string/retailer_tagline"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15sp">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:background="@color/light_blue_70"
                android:text="@string/login"
                android:onClick="redirect_login"
                android:transitionName="transition_login"

                />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:background="@color/light_blue_70"
                android:text="@string/signup"
                android:onClick="redirect_signup"
                android:transitionName="transition_signup"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Looking For a Candidate?" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150px"
            android:text="@string/copyright"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>


</ScrollView>



